<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<FlowPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="600.0" prefWidth="800.0"
          xmlns="http://javafx.com/javafx/17.0.12"
          fx:controller="com.example.libraryManagementSystem.RegisterController">
    <stylesheets>
        <URL value="@styles/style.css"/>
    </stylesheets>
    <VBox alignment="CENTER" prefWidth="500.0" spacing="10" style="-fx-padding: 10;">
        <ImageView fx:id="profileImageView" fitHeight="100.0" fitWidth="100.0" onMouseClicked="#imageViewOnClick"
                   pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets bottom="30.0"/>
            </VBox.margin>
        </ImageView>

        <HBox alignment="CENTER" spacing="8">
            <VBox spacing="3">
                <Label text="Username"/>
                <TextField fx:id="userNameField" promptText="Username"/>
                <Label fx:id="userNameErrorLabel" styleClass="error-label"/>
            </VBox>
            <VBox spacing="3">
                <Label text="Full Name"/>
                <TextField fx:id="fullNameField" promptText="Full Name"/>
                <Label fx:id="fullNameErrorLabel" styleClass="error-label"/>
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="8">
            <VBox spacing="3">
                <Label text="Password"/>
                <PasswordField fx:id="passwordField" promptText="Password"/>
                <Label fx:id="passwordErrorLabel" styleClass="error-label"/>
            </VBox>
            <VBox spacing="3">
                <Label text="Confirm Password"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
                <Label fx:id="confirmPasswordErrorLabel" styleClass="error-label"/>
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="8">
            <VBox spacing="3">
                <Label text="Email"/>
                <TextField fx:id="emailField" promptText="Email"/>
                <Label fx:id="emailErrorLabel" styleClass="error-label"/>
            </VBox>
            <VBox spacing="3">
                <Label text="Phone"/>
                <TextField fx:id="phoneField" promptText="Phone"/>
                <Label fx:id="phoneErrorLabel" styleClass="error-label"/>
            </VBox>
        </HBox>

        <VBox alignment="CENTER" spacing="3">
            <Label text="Role"/>
            <ComboBox fx:id="roleComboBox" maxWidth="140.0" prefWidth="100.0" promptText="Select Role"/>
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </VBox>

        <Button mnemonicParsing="false" onAction="#registerButtonOnClick" styleClass="accent" text="Register">
        </Button>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?"/>
            <Hyperlink onAction="#switchToLogin" text="Login"/>
        </HBox>
    </VBox>
</FlowPane>
