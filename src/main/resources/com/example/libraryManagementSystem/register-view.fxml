<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.libraryManagementSystem.RegisterMenuController"
    prefHeight="400.0" prefWidth="300.0">

    <VBox alignment="CENTER" spacing="15" AnchorPane.topAnchor="0.0"
        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
        AnchorPane.rightAnchor="0.0">

        <padding>
            <Insets top="20" right="30" bottom="20" left="30" />
        </padding>

        <Text style="-fx-font-size: 24px;" text="Register" />

        <TextField fx:id="userNameField" promptText="Username"
            style="-fx-pref-width: 200;" />

        <PasswordField fx:id="passwordField" promptText="Password"
            style="-fx-pref-width: 200;" />

        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
            style="-fx-pref-width: 200;" />

        <Button text="Register" onAction="#registerButtonOnClick"
            style="-fx-pref-width: 200; -fx-background-color: #4CAF50; -fx-text-fill: white;" />

        <Label fx:id="errorLabel" />

        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" />
            <Hyperlink text="Login" onAction="#switchToLogin" />
        </HBox>
    </VBox>
</AnchorPane>