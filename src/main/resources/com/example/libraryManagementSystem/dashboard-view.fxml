<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import java.net.URL?>
<FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="1200.0" prefWidth="1600.0"
          xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.libraryManagementSystem.DashboardController">
    <stylesheets>
        <URL value="@styles/styles.css"/>
    </stylesheets>
    <HBox alignment="CENTER" prefHeight="750.0" prefWidth="1150.0" spacing="20">
        <!-- Left Sidebar -->
        <VBox alignment="CENTER" prefHeight="750.0" prefWidth="150.0" spacing="10" style="-fx-padding: 15;">
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true"/>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Dashboard"/>
            <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="120.0" text="Books"/>
        </VBox>

        <!-- Middle Form Section -->
        <VBox alignment="CENTER" prefHeight="750.0" prefWidth="350.0" spacing="15" style="-fx-padding: 15;">
            <ImageView fx:id="profileImageView" fitHeight="80.0" fitWidth="80.0" onMouseClicked="#imageViewOnClick"
                       pickOnBounds="true" preserveRatio="true"/>

            <HBox alignment="CENTER" spacing="8">
                <VBox spacing="3">
                    <TextField fx:id="userNameField" prefHeight="30.0" prefWidth="140.0" promptText="Username"/>
                    <Label fx:id="userNameErrorLabel" styleClass="error-label"/>
                </VBox>
                <VBox spacing="3">
                    <TextField fx:id="fullNameField" prefHeight="30.0" prefWidth="140.0" promptText="Full Name"/>
                    <Label fx:id="fullNameErrorLabel" styleClass="error-label"/>
                </VBox>
            </HBox>

            <HBox alignment="CENTER" spacing="8">
                <VBox spacing="3">
                    <PasswordField fx:id="passwordField" prefHeight="30.0" prefWidth="140.0" promptText="Password"/>
                    <Label fx:id="passwordErrorLabel" styleClass="error-label"/>
                </VBox>
                <VBox spacing="3">
                    <PasswordField fx:id="confirmPasswordField" prefHeight="30.0" prefWidth="140.0"
                                   promptText="Confirm Password"/>
                    <Label fx:id="confirmPasswordErrorLabel" styleClass="error-label"/>
                </VBox>
            </HBox>

            <HBox alignment="CENTER" spacing="8">
                <VBox spacing="3">
                    <TextField fx:id="emailField" prefHeight="30.0" prefWidth="140.0" promptText="Email"/>
                    <Label fx:id="emailErrorLabel" styleClass="error-label"/>
                </VBox>
                <VBox spacing="3">
                    <TextField fx:id="phoneField" prefHeight="30.0" prefWidth="140.0" promptText="Phone"/>
                    <Label fx:id="phoneErrorLabel" styleClass="error-label"/>
                </VBox>
            </HBox>

            <ComboBox fx:id="roleComboBox" prefHeight="30.0" prefWidth="140.0" promptText="Select Role"/>

            <Button mnemonicParsing="false"
                    style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-pref-width: 140; -fx-pref-height: 35; -fx-cursor: hand;"
                    text="Register">
                <styleClass>
                    <String fx:value="button-with-hover"/>
                </styleClass>
            </Button>
            <Label fx:id="roleErrorLabel" styleClass="error-label"/>
        </VBox>
        <!-- Right Table Section -->
        <TableView prefHeight="750.0" prefWidth="537.0">
            <columns>
                <TableColumn fx:id="usernameColumn" prefWidth="90.0" text="Username">
                    <cellValueFactory>
                        <PropertyValueFactory property="username"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="fullNameColumn" prefWidth="100.0" text="Full Name">
                    <cellValueFactory>
                        <PropertyValueFactory property="fullName"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="emailColumn" prefWidth="110.0" text="Email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="phoneColumn" prefWidth="90.0" text="Phone">
                    <cellValueFactory>
                        <PropertyValueFactory property="phone"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="roleColumn" prefWidth="60.0" text="Role">
                    <cellValueFactory>
                        <PropertyValueFactory property="role"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </HBox>
</FlowPane>
