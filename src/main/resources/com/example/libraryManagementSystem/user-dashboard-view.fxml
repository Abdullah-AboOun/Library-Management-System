<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="700.0" prefWidth="1200.0"
          xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.libraryManagementSystem.UserDashboardController">

    <stylesheets>
        <URL value="@styles/style.css"/>
    </stylesheets>
    <VBox prefHeight="700.0" prefWidth="1200.0">
        <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" prefHeight="100.0" spacing="20.0"
              style="-fx-background-color: #282a2e;" VBox.vgrow="ALWAYS">
            <ImageView fx:id="smallProfileImageView" fitHeight="40.0" fitWidth="40.0"
                       onMouseClicked="#smallProfileImageViewOnClick" pickOnBounds="true" preserveRatio="true">
            </ImageView>
            <Label fx:id="usernameLabel"/>
            <Pane nodeOrientation="RIGHT_TO_LEFT" HBox.hgrow="ALWAYS">
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logoutButtonOnClick" styleClass="danger"
                        text="logout"/>
            </Pane>

            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <effect>
                <DropShadow/>
            </effect>
        </HBox>
        <HBox alignment="CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="15">
            <!-- Left Sidebar -->
            <VBox alignment="CENTER" prefHeight="639.0" prefWidth="180.0" spacing="20.0" style="-fx-padding: 15;">
                <Button mnemonicParsing="false" style="-fx-pref-width: 150"
                        styleClass="accent" text="User Management"/>
                <Button disable="true" mnemonicParsing="false" style="-fx-pref-width: 150" styleClass="accent"
                        text="Book Management"/>
                <VBox.margin>
                    <Insets bottom="40.0"/>
                </VBox.margin>

            </VBox>
        </HBox>
    </VBox>
</FlowPane>